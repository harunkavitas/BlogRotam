@model BlogRotam.Models.Blog

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">

   
        <div class="col-md-4">
     @if(Model.Image==null){
                    <img src="~/images/image/no-image-png-2.png" Width="150" height="150"/>
                }
                else{
                    <img src="@Model.Image" Width="150" height="150"/>
                }
    </div>
    <div class="col-md-4">
        <h4 class="text-success">Edit</h4>
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                Header
                <input asp-for="Header" class="form-control" />
                <span asp-validation-for="Header" class="text-danger"></span>
            </div>
            <div class="form-group" >
                Article
                
                <input asp-for="Article" class="form-control"  />
                <span asp-validation-for="Article" class="text-danger"></span>
            </div>
            
           
            <div class="form-group">
                Resim
                <input asp-for="Image" class="form-control" type="hidden" />
                <input asp-for="Image" class="form-control" type="file" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            @if (User.IsInRole(Other.Role_Admin))
           {
               <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Check" /> @Html.DisplayNameFor(model => model.Check)
                </label>
            </div>
           }
            <div class="form-group">
                Category
                <select asp-for="CategoryId" class ="form-control" asp-items="ViewBag.CategoryId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-primary">List </a>
            </div>
        </form>
    </div>
    
</div>


           
           
