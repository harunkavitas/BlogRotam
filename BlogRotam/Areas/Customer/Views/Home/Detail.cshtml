    </div>
</div>
<br />

<div class="row" >
    <div class="col-md-8">
        <br /> 
        <form asp-action="GoComment" method="post">
            
       
    <div class="col-md-8">
        <div class="card">
  <div class="card-header">
    Comment
  </div>
  <div class="card-body" >
      <div class="form-group" >
                
                
                <textarea asp-for="Description" class="form-control" placeholder="What do you think ?"  rows="5" input/></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
    
   <br />
    
    @if (User.Identity.IsAuthenticated)
 {
    <button type="submit" class="btn btn-primary">Comment</button>
 } 
 else 
    {
         <div class="alert alert-warning text-center">
                    You must be <a asp-area="Identity"  asp-page="/Account/Login">logged</a> in to post a comment .
                </div>
    }
  </div>
  
</div>
</div>
 
    
   
   </form>
   <br />
        @foreach (var item in ViewBag.cmt)
        {
            <div class="card">
  <div class="card-header">
    <img src="~/images/image/user.png" Width="50" height="50" />
    <span>@item.ApplicationUser.Name </span> - <small> (@item.CommentDate.ToString("dd.MM.yyyy"))</small>
  </div>
  <div class="card-body" >
      <div class="form-group" >
              @item.Description
            </div>
         </div>
         </div>
        }
        
         
    
       
