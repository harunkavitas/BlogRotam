<div class="row"> 
    <div class="col-md-8">
        @if(@ViewBag.blog.Image==null){
                    
                }
                else{
                    <img src="@ViewBag.blog.Image" alt="..." style="height:500px; width:800px;" >
                }
        
   </div>
   <div class="col-md-1"></div>
<div class="col-md-3">
           <form class="d-flex" action="/Customer/Home/Search" role="search">
