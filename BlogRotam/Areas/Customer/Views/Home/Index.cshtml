      <div class="row">
         <div class="col-md-8">
          @foreach (var item in Model)
        {
      
            <div class="card-group" >
  <a asp-area="Customer" asp-controller="Home"  asp-action="Detail" asp-route-id="@item.Id"> 
      @if(item.Image==null){
                    <img src="~/images/image/no-image-png.png" class="card-img-top" alt="..."  height="450"/>
                }
                else{
                    <img src="@item.Image" class="card-img-top" alt="..." height="450"/>
                }
      </a>
  <div class="card-body">
    <h5 class="card-title">@item.Header</h5>
    <p class="card-text">@item.Article</p>
    <a asp-action="Detail" asp-controller="Home" asp-route-id="@item.Id" class="btn btn-primary">Read more..</a>
    <br />
    
   <p class="card-text"><small class="text-muted"><i class="fa fa-clock-o" aria-hidden="true"></i> @item.Date.ToString("dd.MM.yyyy") | <i class="fa fa-eye" aria-hidden="true"></i> @item.Shows</small></p>
    
  </div>
</div>
       
 
    
        }
         
      @Html.PagedListPager(Model ,sayi=>Url.Action("Index", new { sayi }), new X.PagedList.Web.Common.PagedListRenderOptions{
